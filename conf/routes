# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# import webjars routes
->          /webjars                webjars.Routes



GET     /signUp                   controllers.UserController.signUp
POST    /user                     controllers.UserController.addUser

GET     /signIn                   controllers.AuthController.signIn
GET     /signOut                  controllers.AuthController.signOut
POST    /validateCredentials      controllers.AuthController.validateCredentials

GET     /dashboard                controllers.DashboardController.index

# Home Page
GET     /                         controllers.DashboardController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
